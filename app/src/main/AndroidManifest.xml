<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.casey.altimeter">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Get GPS Permission -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Get GPS Permission -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Get GPS Permission -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Altimeter"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Project"
            android:label="@string/title_activity_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Zone"
            android:label="@string/title_activity_zone_landing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Current_Elevation"
            android:label="@string/title_activity_current__elevation"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Mapping"
            android:label="@string/title_activity_mapping"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
